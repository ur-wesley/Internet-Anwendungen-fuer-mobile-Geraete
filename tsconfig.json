{
 "compilerOptions": {
  "target": "ESNext",
  "module": "ESNext",
  "moduleResolution": "node",
  "allowSyntheticDefaultImports": true,
  "resolveJsonModule": true,
  "esModuleInterop": true,
  "jsx": "preserve",
  "jsxImportSource": "solid-js",
  "types": ["vite/client", "bun-types"],
  "noEmit": true,
  "isolatedModules": true,

  "baseUrl": "./",
  "paths": {
   "@/*": ["./src/*"]
  }
 }
}
